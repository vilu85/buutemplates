{
    "root": true,
    "env": {
        "es2021": true,
        "node": true,
        "jest/globals": true
    },
    "extends": "eslint:recommended",
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "jest"
    ],
    "rules": {
        "prefer-const": "error",
        "no-var": "error",
        "no-unused-vars": [
            "warn",
            { 
                "argsIgnorePattern": "^_",
                "varsIgnorePattern": "^_",
                "caughtErrorsIgnorePattern": "^_"
            }
        ],
        "indent": [ "error", 4],
        "space-before-function-paren":[ "warn", {"anonymous": "always", "named": "never"}],
        "semi": ["warn", "always"]
    }
}
